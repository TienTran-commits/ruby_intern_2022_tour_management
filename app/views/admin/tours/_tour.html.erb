<tr>
  <td><%= tour.id %></td>
  <td><%= link_to tour.title, admin_tour_path(tour.id), class: "link-primary" %></td>
  <td>
    <p class="link-<%= tour.active ? "success" : "danger" %>">
      <%= tour.show_active %>
    </p>
  </td>
  <td><%= tour.created_at.strftime Settings.date_time.format %></td>
  <td><%= tour.updated_at.strftime Settings.date_time.format %></td>
  <td><%= get_link_to tour %></td>
</tr>
