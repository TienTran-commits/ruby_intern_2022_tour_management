<div class="nested-fields">
  <%= f.label :title, t(".title") %>
  <%= f.text_field :title, class: "form-control mb-3" %>
  <div class="form-group d-flex">
    <%= f.label :start_date, t(".from"), class: "mr-1" %>
    <%= f.datetime_field :start_date, class: "form-control" %><br>
  </div>
  <div class="form-group d-flex">
    <%= f.label :end_date, t(".to"), class: "mr-1" %>
    <%= f.datetime_field :end_date, class: "form-control" %>
  </div>
  <%= link_to_remove_association t(".remove_schedules"), f, class: "link-danger" %>
</button>
